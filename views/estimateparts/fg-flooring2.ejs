<div  class="form-group">
  <label for="usesEpoxy">Uses Epoxy?</label>
  <input type="checkbox" class="form-control" id="usesEpoxy" onchange="checkchange()" name="usesEpoxy" <%= estimate.flooring.usesEpoxy ? 'checked' : ' ' %> />
</div>
<div class="form-group">
  <label for="epoxyProductSelection" id="epoxyProductSelectionlabel">Epoxy Product Selection</label>
  <select class="form-control" name="epoxyProductSelection" id="epoxyProductSelection"  >
      <option selected disabled>Select</option>
    <%  var data = flooringCoatings.query; for( var i=0; i<data.length; i++){
           if (data[i].name.toLowerCase().includes("epoxy")){
      %>
    <option value="<%= data[i]._id %>" <%= (estimate.flooring.epoxyProductSelection == data[i]._id)?'selected':'' %>> <%= data[i].name %> </option>
    <% }} %>
</select>
</div>
<div class="form-group">
  <label for="epoxyCoverageSqFt" id="epoxyCoverageSqFtlabel">Epoxy Coverage (SqFt)</label>
  <input type="number" class="form-control" id="epoxyCoverageSqFt" onkeyup="if (this.value.length >= 2) checkrange()" name="flooring.epoxyCoverageSqFt" value="<%= estimate.flooring.epoxyCoverageSqFt || 100 %>" min=100 max=400>
</div>
<script>
    function checkrange() {

}
   function checkchange()  {
     if (document.getElementById('usesEpoxy').checked) {
        //alert('is checked');
         document.getElementById('epoxyProductSelection').style.display = "block";
         document.getElementById('epoxyCoverageSqFt').style.display = "block";
          document.getElementById('epoxyProductSelectionlabel').style.display = "block";
      document.getElementById('epoxyCoverageSqFtlabel').style.display = "block";

     }
 else {
     //alert("now it's not checked");
     document.getElementById('epoxyProductSelection').style.display = "none";
      document.getElementById('epoxyCoverageSqFt').style.display = "none";
     document.getElementById('epoxyProductSelectionlabel').style.display = "none";
      document.getElementById('epoxyCoverageSqFtlabel').style.display = "none";

   }
}
</script>