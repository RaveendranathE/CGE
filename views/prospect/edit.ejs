<h2>Edit Prospect</h2>
<div class="content">
	<div>
		<form method="POST" action="/prospect/save/<%= prospect._id %>">

			<div class="form-group" id=frm>
				<label for="_id">ID</label>
				<input type="number" class="form-control" id="_id" name="_id" value="<%= prospect._id %>" required disabled>
			</div>

			<div class="form-group">
				<label for="customerName">Customer Name</label>
				<input type="text" class="form-control" id="customerName" name="customerName" value="<%= prospect.customerName %>" required>
			</div>

			<div class="form-group">
					<label for="address">Address</label>
					<input type="text" class="form-control" id="address" name="address" value="<%= prospect.address %>" required>
				</div>

                <div class="form-group">
					<label for="city">City</label>
					<input type="text" class="form-control" id="city" name="city" value="<%= prospect.city %>" required>
				</div>

                <div class="form-group">
					<label for="state">State (2 letter code)</label>
					<input type="text" class="form-control" id="state" name="state" value="<%= prospect.state %>" required>
				</div>

                <div class="form-group">
					<label for="zip">Zip Code</label>
					<input type="text" class="form-control" id="zip" name="zip" value="<%= prospect.zip %>" required>
				</div>

                <div class="form-group">
					<label for="sqft">Square Feet</label>
					<input type="number" class="form-control" id="sqft" name="sqft" value="<%= prospect.sqft %>" required>
				</div>

                <div class="form-group">
					<label for="customerType">Customer Type</label>
					<input type="text" class="form-control" id="customerType" name="customerType" value="<%= prospect.customerType %>" required>
				</div>

                <div class="form-group">
					<label for="contact">Contact Name</label>
					<input type="text" class="form-control" id="contact" name="contact" value="<%= prospect.contact %>">
				</div>


			<input type="submit" value="Save" class="btn btn-primary" />
		</form>
		<br/>
		<form method="get" action="/prospect">
			<input type="submit" value="Return to list" class="btn btn-caution" />
		</form>
	</div>
</div>