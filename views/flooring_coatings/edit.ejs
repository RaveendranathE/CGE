<h2>Edit flooring coatings </h2>
<div class="content">
	<div>
		<form method="POST" action="/flooringCoating/save/<%= flooringCoating._id %>">
			<div class="form-group" id=frm>
				<label for="_id">ID</label>
				<input type="number" class="form-control" id="_id" name="_id" value="<%= flooringCoating._id %>" required disabled>
			</div>
			<div class="form-group">
				<label for="name">Name</label>
				<input type="text" class="form-control" id="name" name="name" value="<%= flooringCoating.name %>" maxlength="50" required>
			</div>
			<div class="form-group">
				<label for="unit">Unit</label>
				<input type="text" class="form-control" id="unit" name="unit" value="<%= flooringCoating.unit %>" maxlength="3" required>
			</div>
			<div class="form-group">
				<label for="price">Price</label>
				<input type="number" class="form-control" id="price" name="price" value="<%= flooringCoating.price %> min="0" max="100"" required>
			</div>
			<div class="form-group">
				<label for="displayorder">Display Order</label>
				<input type="number" class="form-control" id="displayorder" name="displayorder" value="<%= flooringCoating.displayorder %>" min="0" max="200" required>
			</div>
			<input type="submit" value="Save" class="btn btn-primary" />
		</form>
		<br/>
		<form method="get" action="/flooringCoating">
			<input type="submit" value="Return to list" class="btn btn-caution" />
		</form>
	</div>
</div>
