<h2>Recent roofing estimates</h2>
<% if (roofingEstimates.query.length == 1){%>
	<p>There is currently 1 roofing estimate.</p>
<% }else{%>
		<p>There are currently <%= roofingEstimates.query.length %> roofing estimates.</p>
<% } %> <br/>
    <a href="/roofingEstimate/create" class="btn btn-primary">Add a new one</a></p>
<% for (var i = 0; i < roofingEstimates.query.length; i++) { 
       estimate = roofingEstimates.query[i]; %>
  <div class="panel panel-default">
    <div class="panel-heading"><%=estimate.client%> - <%=estimate.address%> (<%=estimate.city%>, <%=estimate.state%>)</div>
    <div class="text-muted pull-right"></div>
    <div class="panel-body">
      ID:
      <%=  estimate._id %><br>
              <% include ../estimateparts/est-footage %>
              <% include ../estimateparts/est-roofing %>
                  <% include ../estimateparts/est-aggregate %>
                    <% include ../estimateparts/est-labor %>
                      <% include ../estimateparts/est-mileage %>
                        <% include ../estimateparts/est-misc %>
                          <% include ../estimateparts/est-comment %>
                            <% include ../estimateparts/est-result %> <br/>
                              <a href="/roofingEstimate/delete/<%= estimate._id  %>" class="btn btn-danger"> Delete </a>
                              <a href="/roofingEstimate/details/<%= estimate._id %>" class="btn btn-info"> Details </a>
                              <a href="/roofingEstimate/edit/<%= estimate._id %>" class="btn btn-warning">  Edit </a>
    </div>
  </div>
  <% } %>